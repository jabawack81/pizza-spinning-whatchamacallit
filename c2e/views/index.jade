extends layout


block content
  h1= title
  p Welcome to #{title}
  button#forward forward
  button#backward backward
  button#stop stop
  script.
    const loaded = () => {
      document.getElementById("forward").addEventListener("click", (e) => doTheFetch("forward") )
      document.getElementById("backward").addEventListener("click", (e) => doTheFetch("backward") )
      document.getElementById("stop").addEventListener("click", (e) => doTheFetch("stop") )
    }
    const doTheFetch = (endpoint) => {
    fetch(`/${endpoint}`,{
      method: 'PUT',
      headers:{
      'Content-Type':'application/json'
      },
      body: ""
      })

    }
    document.onload = loaded();
